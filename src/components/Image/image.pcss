.img-circle{
    width: var(--size, 120px);
    height: var(--size, 120px);
    border-radius: 50%;
    overflow: hidden;
    display: flex;
    justify-content: center;
    box-shadow: inset 0 0 0 1px #e1e5ea;
}

.img-circle > img{
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
}

.img-centered { display: flex; justify-content: center; }
